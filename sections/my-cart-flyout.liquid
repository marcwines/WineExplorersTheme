<!-- Settings etc -->
{% schema %}
    {
        "name": "My Cart",
        "settings": []
    }
{% endschema %}


<!-- Markup -->
<h2>Cart</h2>
<div class="my-cart">
<div class="cart-wrap" data-ajax-cart-section data-ajax-cart-section-scroll>
      <div class="mycart__items">
        {% for item in cart.items %}
        <hr>
        <div class="flyout-image">{{ item.featured_image | img_url: '600x600' | img_tag: item.featured_image.alt }}</div>
        <div class="flyout-title"><a href="{{ item.url }}">{{ item.title }}</a></div>
        <div class="flyout-price">Price: {{ item.final_price | money }}</div>
        <div class="flyout-quantity"> 
            Quantity: 
              <div class="flyout-quantity__selector">
                          <a data-ajax-cart-request-button href=" {{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | minus: 1 }} " class="flyout-minus">-</a>
                          {{ item.quantity }}
                          <a data-ajax-cart-request-button href=" {{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | plus: 1 }} " class="flyout-minus">+</a>
              </div>
<!-- TESTING -->

<quantity-input class="quantity">
                        <button data-ajax-cart-request-button class="quantity__button no-js-hidden" name="minus" type="button">
                          <span class="visually-hidden">Decrease quantity for Commander Monthly Wine Subscription</span>
                          <a data-ajax-cart-request-button href=" {{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | minus: 1 }} " class="flyout-minus">
                                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" fill="none" viewBox="0 0 10 2">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M.5 1C.5.7.7.5 1 .5h8a.5.5 0 110 1H1A.5.5 0 01.5 1z" fill="currentColor">
                                </path></svg>
                          </a>
                        </button>
                        <input class="quantity__input" type="number" name="updates[]" value="5" min="0" aria-label="Quantity for Commander Monthly Wine Subscription" id="Quantity-1" data-index="1">
                        <button data-ajax-cart-request-button class="quantity__button no-js-hidden" name="plus" type="button">
                          <span class="visually-hidden">Increase quantity for Commander Monthly Wine Subscription</span>
                          <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" fill="none" viewBox="0 0 10 10">
  <path fill-rule="evenodd" clip-rule="evenodd" d="M1 4.51a.5.5 0 000 1h3.5l.01 3.5a.5.5 0 001-.01V5.5l3.5-.01a.5.5 0 00-.01-1H5.5L5.49.99a.5.5 0 00-1 .01v3.5l-3.5.01H1z" fill="currentColor">
</path></svg>

                        </button>
                      </quantity-input>
<!-- TESTING DONE -->
          
        </div>
        <div>
          <a data-ajax-cart-request-button href="/cart/change?line={{ forloop.index }}&quantity=0" rel="{{ item.id }}">Remove Item</a>
        </div> 
        {% endfor %}
        <div class="flyout-total">Total: {{cart.total_price | money_with_currency }}</div>
    </div>
  </div>
</div>

<!-- Additional Settings -->

